<UserControl x:Class="WpfApp1.Views.EmployeeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WpfApp1.Views"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Employee Card Form -->
        <materialDesign:Card Grid.Row="0" Margin="16" UniformCornerRadius="8" Background="{DynamicResource MaterialDesignPaper}">
            <StackPanel Margin="24,16">
                <TextBlock Text="EMPLOYEE INFORMATION" 
                         Style="{StaticResource MaterialDesignHeadline6TextBlock}" 
                         HorizontalAlignment="Center" 
                         Margin="0,0,0,16"/>

                <Grid>
                    <Button x:Name="btnUpload" Click="BtnUpload_Click" Visibility="Hidden"/>
                    <Image x:Name="imgDisplay" Width="100" Height="100" Visibility="Hidden"/>
                </Grid>
                
                <TextBox x:Name="txtName"
                         materialDesign:HintAssist.Hint="Full Name"
                         Margin="0,8"/>
                
                <ComboBox x:Name="cboRole"
                         materialDesign:HintAssist.Hint="Select Role"
                         IsEditable="True"
                         Margin="0,8">
                    <ComboBoxItem>Hotel Manager</ComboBoxItem>
                    <ComboBoxItem>Front Desk Manager</ComboBoxItem>
                    <ComboBoxItem>Receptionist</ComboBoxItem>
                    <ComboBoxItem>Housekeeping Manager</ComboBoxItem>
                    <ComboBoxItem>Housekeeper</ComboBoxItem>
                </ComboBox>

                <TextBox x:Name="txtEmail"
                        materialDesign:HintAssist.Hint="Email Address"
                        Margin="0,8"/>

                <TextBox x:Name="txtPhone"
                        materialDesign:HintAssist.Hint="Phone Number"
                        Margin="0,8"/>

                <TextBox x:Name="txtAddress"
                         
                        materialDesign:HintAssist.Hint="Address"
                        TextWrapping="Wrap"
                        Margin="0,8"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,16,0,0">
                    <Button 
                            Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                            Content="CLEAR"
                            Margin="0,0,8,0"
                            Click="BtnClear_Click"/>
                    <Button 
                            Content="UPDATE"
                            Margin="8,0"
                            Click="BtnUpdate_Click"/>
                    <Button 
                            Content="SAVE"
                            Margin="8,0,0,0"
                            Click="BtnSave_Click"/>
                </StackPanel>
            </StackPanel>
        </materialDesign:Card>

        <!-- DataGrid -->
        <DataGrid Grid.Row="1" x:Name="dgEmployees"
                  Style="{StaticResource MaterialDesignDataGrid}"
                  Margin="16"
                  AutoGenerateColumns="False"
                  SelectionChanged="DgEmployees_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="*"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                <DataGridTextColumn Header="Phone" Binding="{Binding Phone}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Search and Controls -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="16">
            <TextBox x:Name="txtSearch"
                     materialDesign:HintAssist.Hint="Search employees..."
                     Width="250"
                     Margin="0,0,16,0"/>
            
            <Button 
                    Content="SEARCH"
                    Click="BtnSearch_Click"
                    Margin="0,0,8,0"/>
            
            <Button 
                    Content="SORT BY NAME"
                    Click="BtnSortName_Click"
                    Margin="8,0"/>
            
            <Button 
                    Content="SORT BY ROLE"
                    Click="BtnSortRole_Click"
                    Margin="8,0"/>
            
            <Button 
                    Content="DELETE"
                    Click="BtnDelete_Click"
                    Margin="8,0,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
