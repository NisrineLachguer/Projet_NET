<UserControl x:Class="WpfApp1.RoomControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WpfApp1"
             xmlns:viewModels="clr-namespace:WpfApp1.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    
    <Grid>
        <DataGrid ItemsSource="{Binding Rooms}" AutoGenerateColumns="False" Margin="10" Name="RoomGrid">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" />
                <DataGridTextColumn Header="Room Number" Binding="{Binding RoomNumber}" />
                <DataGridCheckBoxColumn Header="Available" Binding="{Binding IsAvailable}" />
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" />
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="10">
            <Button Content="Add" Width="100" Margin="5" Command="{Binding AddRoomCommand}" />
            <Button Content="Delete" Width="100" Margin="5" Command="{Binding DeleteRoomCommand}" />
        </StackPanel>
    </Grid>
</UserControl>
